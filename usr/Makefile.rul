Mode=USER

# プリプロセッサ
CPP=cc -E -std=c99 -nostdinc ${CPFLAGS} -I../include - <

# ユーザライブラリ
LIB=../lib/library.o

# モード
ifeq (${Mode},KERN)
  cmmMode=-K
  exeMode=KERN
else
  cmmMode=
  exeMode=USER
endif

# make するソースのサフィックス（拡張子） の一覧
.SUFFIXES: .o .cmm .s

# .s -> .o
.s.o:
	as-- $*.s

# .cmm -> .s
.cmm.s:
	${CPP} $*.cmm| c-- ${cmmMode} > $*.s

# 必要ならライブラリを作る
${LIB} :
	${MAKE} --directory=../lib

# .o ファイルを結合して mod.o ファイルを生成する
mod.o : ${LIB} ${OBJS}
	ld-- mod.o ${LIB} ${OBJS} > mod.sym

# mod.o を objexe-- で変換して .exe ファイルを生成する
${NAME}.exe : mod.o
	objexe-- ${NAME}.exe  mod.o 600 ${exeMode} | sort --key=1 > ${NAME}.map

clean :
	rm -f *.o *.lst *.sym *.exe *.map *~