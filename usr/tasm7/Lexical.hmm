#define LxAND       6      //AND
#define LxOR        7      //OR
#define LxXOR       8      //XOR

#define LxSHLA      9      //SHLA
#define LxSHLL      10      //SHLL
#define LxSHRA      11      //SHRA
#define LxSHRL      12      //SHRL3
#define LxJMP       13      //JMP
#define LxJZ        14      //JZ
#define LxJC        15      //JC
#define LxJM        16      //JM
#define LxJNZ       17      //JNZ
#define LxJNC       18      //JNC
#define LxJNM       19      //JNM
#define LxCALL      20      //CALL

#define LxPUSH      21      //PUSH
#define LxPUSHF     22      //PUSHF
#define LxPOP       23      //POP
#define LxPOPF      24      //POPF

#define LxIN        25      //IN
#define LxOUT       26      //OUT
#define LxEI        27      //EI
#define LxDI        28      //DI
#define LxRET       29      //RET
#define LxRETI      30      //RETI
#define LxHALT      31      //HALT

#define LxEQU       32      //EQU
#define LxORG       33      //ORG
