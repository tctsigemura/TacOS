#define LxDC        35      //DC


//レジスタのトークン番号
#define LxG0        36      //G0
#define LxG1        37     //G1
#define LxG2        38     //G2
#define LxSP        39     //SP


//トークンタイプを表すトークン番号
#define LxSPC       100     // Space
#define LxEOF       101     // End of File
#define LxEOL       102     // End of Line
#define LxCOM       103     // Comment
#define LxNUM       104     // Number
