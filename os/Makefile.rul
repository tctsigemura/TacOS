# デバッグの場合
ifdef DEBUG
CMFLAGS+=-DDEBUG
endif

CMFLAGS+=-I/usr/local/cmmInclude
CMFLAGS+=-K -nostdinc -I../kernel -I../util -I../fs -I../mm -I../pm -I../tty \
                      -I../sio

# make するソースのサフィックス（拡張子） の一覧
.SUFFIXES: .o .cmm .s

# .s -> .o
.s.o:
	as-- $*.s

# .cmm -> .o
.cmm.o:
	cm2e ${CMFLAGS} -c $*.cmm

# 各サブディレクトリで生成される .o ファイルを結合して mod.o ファイルを生成する
mod.o : ${OBJS}
	ld-- mod.o ${OBJS} > mod.sym

clean :
	rm -f *.o *.lst *.sym *~
