// コンバータ
public int scConv(char c) {
  boolean shift = (ord(c) >= 0x80);
  int retVal = ord(scTbl[ord(c) & 0x007f]);
  if (shift) {
    if      (isLower(chr(retVal))) retVal = retVal - 0x20;
    else if (isDigit(chr(retVal))) retVal = retVal - 0x10;
    else if (ord(',')<=retVal && retVal<=ord('/'))
      retVal = retVal + 0x10;
    else if (ord('[')<=retVal && retVal<=ord('^'))
      retVal = retVal + 0x20;
    else if (retVal==ord(';')) retVal = ord('+');
    else if (retVal==ord(':')) retVal = ord('*');
    else if (retVal==ord('@')) retVal = ord('`');
  }
  return retVal;
}
