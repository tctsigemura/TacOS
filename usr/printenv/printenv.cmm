#include <stdio.hmm>
#include <stdlib.hmm>

public int main(int argc, char[][] argv) {
  char[] name = argv[1];

  if (name == null) {                               // 引数がなければ
    for (int i = 0; environ[i] != null; i = i+1)    //   すべての環境変数を
      printf("%s\n", environ[i]);                   //     出力して
    return 0;                                       //   終了
  }

  char[] value = getEnv(name);                      // 環境変数の値を取得
  if (value == null) return 1;                      // null なら終了
  printf("%s\n", value);                            // 表示

  return 0;
}
